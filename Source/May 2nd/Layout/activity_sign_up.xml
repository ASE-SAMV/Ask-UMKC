<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aseproject.askumkc.SignUp"
    android:background="@drawable/login_back1"
    android:orientation="vertical">

    <TextView
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="askUMKC"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:textColor="#FCFAF9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        />
    <EditText
        android:hint="First Name"
        android:id="@+id/first_Name"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#C4C4C9"
        android:textColorHint="#C4C4C9"
        android:singleLine="false"

        android:fontFamily="sans-serif"


        />
    <EditText
        android:hint="Last Name"
        android:id="@+id/last_Name"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#C4C4C9"
        android:textColorHint="#C4C4C9"
        android:singleLine="false"

        android:fontFamily="sans-serif"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:hint="Phone Number"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="20dp"
        android:textColor="#C4C4C9"
        android:textColorHint="#C4C4C9"
        android:singleLine="false"
        android:backgroundTint="@android:color/white"
        android:fontFamily="sans-serif"
        />
    <EditText
        android:hint="Email Id"
        android:id="@+id/email_id"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#C4C4C9"
        android:textColorHint="#C4C4C9"
        android:singleLine="false"
        android:backgroundTint="@android:color/white"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:hint="Username"
        android:id="@+id/user_Name"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#C4C4C9"
        android:textColorHint="#C4C4C9"
        android:singleLine="false"
        android:backgroundTint="@android:color/white"
        android:fontFamily="sans-serif"
        android:drawableBottom="#C4C4C9"
        />
    <EditText
        android:inputType="textPassword"
        android:hint="Password"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#C4C4C9"
        android:textColorHint="#C4C4C9"
        android:singleLine="false"
        android:backgroundTint="@android:color/white"
        android:fontFamily="sans-serif"
        />
    <Button
        android:id="@+id/sign_Up"
        android:text="signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickSignUp"
        android:textSize="20dp"
        android:background="@drawable/mybutton"
        android:textColor="#000000"
        android:elevation="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="35dp" />

</LinearLayout>
